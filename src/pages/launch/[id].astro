const { id } = Astro.params;
console.log({id});

let launch = null;

if (id) {
	const res = await fetch(`https://api.spacexdata.com/v5/launches/${id}`);
	launch = await res.json();

	console.log(id);
	console.log(launch);
} else {
	Astro.redirect("/");
}

export function getStaticPaths() {
    // llamar a la api de spacex para obtener los ids de los lanzamientos
